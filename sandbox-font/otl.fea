@letter.syllabic = [@n @d];

@letter.chachlag_eligible = [@a @e];

lookup syllabic {

    sub
        @letter.syllabic' lookup condition.syllable_initial
        @vowel;

    sub
        @vowel
        @letter.syllabic' lookup condition.devsger;

} syllabic;

lookup chachlag {

    sub
        MVS
        @letter.chachlag_eligible' lookup condition.chachlag;

} chachlag;

lookup pre_chachlag {

    sub
        MVS


} pre_chachlag;
